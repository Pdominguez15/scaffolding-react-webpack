{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "baseUrl": "./src/",
    "paths": {
      "pods": ["pods"],
      "scenes": ["scenes"]
    },
    "declaration": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "jsx": "react",
    "noLib": false,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },

  "include": ["./src/**/*", "./config/test/setup.ts"],
  "exclude": ["node_modules"]
}
